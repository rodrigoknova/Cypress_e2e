pipeline {
    agent any

    stages {
        stage('Clonar Reposit√≥rio') {
            steps {
                git branch: 'main', url: 'https://github.com/rodrigoknova/cypresstrabalho'
            }
        }
        stage('Instalar Dependencias') {
            steps {
                sh 'npm install'
            }
        }
        stage('Executar Testes') {
            steps {
               sh 'NO_COLOR=1 npm run cy:run' 
            }
        }
    }
}
